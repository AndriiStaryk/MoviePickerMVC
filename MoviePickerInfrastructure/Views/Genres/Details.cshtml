@model MoviePickerDomain.Model.Genre

@{
    ViewData["Title"] = @Localizer["details"];
}

<div class="content">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1 class="page-header" class="mr-auto">@Localizer["details"]</h1>
        <div class="ml-auto">
            <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary rounded-pill">@Localizer["edit"]</a>
            <a asp-action="Index" class="btn btn-primary rounded-pill">@Localizer["backToList"]</a>
        </div>
    </div>

    <div>
        <h4>@Localizer["genre"]</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @* @Html.DisplayNameFor(model => model.Name) *@
                @Localizer["title"]
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Name)
            </dd>
        </dl>
    </div>
</div>
