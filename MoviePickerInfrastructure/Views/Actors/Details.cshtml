@model MoviePickerDomain.Model.Actor

@{
    ViewData["Title"] = "Details";
}

<h1>@Localizer["details"]</h1>

<div>
    <h4>@Localizer["actor"]</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @* @Html.DisplayNameFor(model => model.Name) *@
            @Localizer["name"]
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @* @Html.DisplayNameFor(model => model.BirthDate) *@
            @Localizer["birthDate"]
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.BirthDate)
        </dd>
        <dt class = "col-sm-2">
           @*  @Html.DisplayNameFor(model => model.BirthCountry) *@
            @Localizer["birthCountry"]
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.BirthCountry.Name)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">@Localizer["edit"]</a> |
    <a asp-action="Index">@Localizer["backToList"]</a>
</div>
