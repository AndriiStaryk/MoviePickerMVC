@model MoviePickerDomain.Model.MoviesActor

@{
    ViewData["Title"] = "Delete";
}

<h1>@Localizer["deleting"]</h1>

<h3>@Localizer["deletingQuestion"]</h3>
<div>
    <h4>@Localizer["moviesActors"]</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @* @Html.DisplayNameFor(model => model.Actor) *@
            @Localizer["actor"]
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Actor.Name)
        </dd>
        <dt class = "col-sm-2">
            @* @Html.DisplayNameFor(model => model.Movie) *@
            @Localizer["movie"]
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Movie.Title)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="@Localizer["delete"]" class="btn btn-danger" /> |
        <a asp-action="Index">@Localizer["backToList"]</a>
    </form>
</div>
