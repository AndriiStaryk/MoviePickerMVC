@* @model MoviePickerDomain.Model.Movie
 *@

 @model MovieViewModel

@{
    ViewData["Title"] = "Details";
}

<h1>@Localizer["details"]</h1> 

<div>
    <a asp-action="Edit" asp-route-id="@Model?.Movie.Id"> @Localizer["edit"] </a> |
    <a asp-action="Index">@Localizer["backToList"]</a>
</div>


<div>
    <h4>@Localizer["movie"]</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @* @Html.DisplayNameFor(model => model.Title) *@
            @Localizer["title"]
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Movie.Title)
        </dd>
        <dt class = "col-sm-2">
           @*  @Html.DisplayNameFor(model => model.ReleaseDate) *@
            @Localizer["releaseDate"]
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Movie.ReleaseDate)
        </dd>
        <dt class = "col-sm-2">
           @*  @Html.DisplayNameFor(model => model.Budget) *@
            @Localizer["budget"]
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Movie.Budget)
        </dd>
        <dt class = "col-sm-2">
            @* @Html.DisplayNameFor(model => model.BoxOfficeRevenue) *@
            @Localizer["boxOfficeRevenue"]
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Movie.BoxOfficeRevenue)
        </dd>
        <dt class = "col-sm-2">
            @* @Html.DisplayNameFor(model => model.Duration) *@
            @Localizer["duration"]
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Movie.Duration)
        </dd>
        <dt class = "col-sm-2">
            @* @Html.DisplayNameFor(model => model.Rating) *@
            @Localizer["rating"]
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Movie.Rating)
        </dd>
        <dt class = "col-sm-2">
            @* @Html.DisplayNameFor(model => model.Director) *@
            @Localizer["director"]
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Movie.Director.Name)
        </dd>
    </dl>


<table class="table">
    <tr>
        <th>@Localizer["genres"]</th>
    </tr>
    <tr>
        <td>
            <ul>
                @foreach(var genre in Model.Genres)
                {
                    <li>
                            <a asp-action="MoviesByGenre" asp-route-genreId="@genre.Id">  @genre.Name </a>
                    </li>
                }
            </ul>
        </td>
    </tr>
</table>

<table class="table">
    <tr>
        <th>@Localizer["actors"]</th>
    </tr>
    <tr>
        <td>
            <ul>
                @foreach (var actor in Model.Actors)
                {
                    <li>
                        <a asp-action="MoviesByActor" asp-route-actorId="@actor.Id">  @actor.Name </a>
                    </li>
                }
            </ul>
        </td>
    </tr>
</table>


<table class="table">
    <tr>
        <th>@Localizer["languages"]</th>
    </tr>
    <tr>
        <td>
            <ul>
                @foreach (var language in Model.Languages)
                {
                    <li>
                        <a asp-action="MoviesByLanguage" asp-route-languageId="@language.Id">  @language.Name </a>
                    </li>
                }
            </ul>
        </td>
    </tr>
</table>
