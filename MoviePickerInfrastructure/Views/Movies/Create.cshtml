@model ﻿MoviePickerDomain.Model.Movie
@* //@model MovieViewModel *@

@{
    ViewData["Title"] = "Create";
}

<h1>@Localizer["creation"]</h1>

<h4>@Localizer["movie"]</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Title" class="control-label"> @Localizer["title"] </label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ReleaseDate" class="control-label"> @Localizer["releaseDate"] </label>
                <input asp-for="ReleaseDate" class="form-control" />
                <span asp-validation-for="ReleaseDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DirectorId" class="control-label"> @Localizer["director"] </label>
                <select asp-for="DirectorId" class="form-control" asp-items="ViewBag.DirectorId"></select>
            </div>
            @* <divclass ="form-group">
            <label asp-for="DirectorName" class="control-label"></label>
            <input asp-for="DirectorName" class="form-control" />
            <span asp-validation-for="DirectorName" class="text-danger"></span>
            </divclass> *@
            <div class="form-group">
                <label asp-for="Budget" class="control-label"> @Localizer["budget"] </label>
                <input asp-for="Budget" class="form-control" />
                <span asp-validation-for="Budget" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BoxOfficeRevenue" class="control-label"> @Localizer["boxOfficeRevenue"] </label>
                <input asp-for="BoxOfficeRevenue" class="form-control" />
                <span asp-validation-for="BoxOfficeRevenue" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Duration" class="control-label"> @Localizer["duration"] </label>
                <input asp-for="Duration" class="form-control" />
                <span asp-validation-for="Duration" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Rating" class="control-label"> @Localizer["rating"] </label>
                <input asp-for="Rating" class="form-control" />
                <span asp-validation-for="Rating" class="text-danger"></span>
            </div>

            @* @foreach (var genre in ViewBag.Genres)
            {
                <input type="checkbox" name="SelectedGenres" value="@genre.Id" /> @genre.Name

                <br />
            } *@

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">@Localizer["backToList"]</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
