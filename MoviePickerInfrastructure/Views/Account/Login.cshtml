@model LoginViewModel

<h2>@Localizer["logInTitle"]</h2>

@{
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
}

<div class="content">
    <div class="row">
        <div class="col-md-3">
            <form method="post" asp-controller="Account" asp-action="Login" class="form">
                <input type="hidden" name="ReturnUrl" value="@Model.ReturnUrl" />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Email" class="control-label">@Localizer["email"]</label><br />
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password" class="control-label">@Localizer["password"]</label><br />
                    <div style="position: relative;">
                        <input type="password" asp-for="Password" id="password" class="form-control" />
                        <i class="material-symbols-outlined passwordInput" onclick="showHidePassword()">visibility_off</i>
                    </div>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="RememberMe" class="control-label">
                        <input asp-for="RememberMe" class="checkbox" />
                        @Localizer["rememberMe"]
                    </label>
                </div>
                <div class="form-group">
                    <input type="submit" value="@Localizer["logInButton"]" class="btn btn-primary rounded-pill" />
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function showHidePassword() {
            var x = document.getElementById("password");
            var eyeIcon = document.querySelector(".material-symbols-outlined");
            if (x.type === "password") {
                x.type = "text";
                eyeIcon.textContent = "visibility";
            } else {
                x.type = "password";
                eyeIcon.textContent = "visibility_off";
            }
        }
    </script>
}
