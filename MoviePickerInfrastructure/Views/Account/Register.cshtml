@model RegisterViewModel

<h2>@Localizer["registration"]</h2>
@{
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
}

<div class="content">
    <div class="row">
        <div class="col-md-3">
            <form method="post" asp-controller="Account" asp-action="Register" class="form">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Login" class="control-label">@Localizer["login"]</label><br />
                    <input asp-for="Login" class="form-control" />
                    <span asp-validation-for="Login" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Email" class="control-label">@Localizer["email"]</label><br />
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Year" class="control-label">@Localizer["years"]</label><br />
                    <input asp-for="Year" class="form-control" />
                    <span asp-validation-for="Year" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password" class="control-label">@Localizer["password"]</label><br />
                    <div style="position: relative;">
                        <input type="password" id="password" asp-for="Password" class="form-control" />
                        <i class="material-symbols-outlined passwordInput" onclick="showHidePassword()">visibility_off</i>
                    </div>

                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PasswordConfirm" class="control-label">@Localizer["confirmPassword"]</label><br />
                    <div style="position: relative;">
                        <input type="password" id="passwordConfirm" asp-for="PasswordConfirm" class="form-control" />
                        <i class="material-symbols-outlined passwordInput" onclick="showHidePasswordConfirm()">visibility_off</i>
                    </div>
                    <span asp-validation-for="PasswordConfirm" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="@Localizer["register"]" class="btn btn-primary rounded-pill" />
                </div>
            </form>
        </div>
    </div>

</div>

@section Scripts {
    <script>
        function showHidePassword() {
            var password = document.getElementById("password");
            var eyeIcon = password.nextElementSibling;
            if (password.type === "password") {
                password.type = "text";
                eyeIcon.textContent = "visibility";
            } else {
                password.type = "password";
                eyeIcon.textContent = "visibility_off";
            }
        }

        function showHidePasswordConfirm() {
            var passwordConfirm = document.getElementById("passwordConfirm");
            var eyeIcon = passwordConfirm.nextElementSibling;
            if (passwordConfirm.type === "password") {
                passwordConfirm.type = "text";
                eyeIcon.textContent = "visibility";
            } else {
                passwordConfirm.type = "password";
                eyeIcon.textContent = "visibility_off";
            }
        }
    </script>
}

