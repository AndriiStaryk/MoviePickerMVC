@model MoviePickerDomain.Model.MoviesLanguage

@{
    ViewData["Title"] = "Details";
}

<h1>@Localizer["details"]</h1>

<div>
    <h4>@Localizer["moviesLanguages"]</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @* @Html.DisplayNameFor(model => model.Language) *@
            @Localizer["language"]
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Language.Name)
        </dd>
        <dt class = "col-sm-2">
            @* @Html.DisplayNameFor(model => model.Movie) *@
            @Localizer["movie"]
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Movie.Title)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">@Localizer["edit"]</a> |
    <a asp-action="Index">@Localizer["backToList"]</a>
</div>
