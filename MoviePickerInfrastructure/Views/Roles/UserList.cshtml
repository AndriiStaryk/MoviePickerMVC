@model IEnumerable<MoviePickerDomain.Model.User>


<div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="mr-auto">@Localizer["usersList"]</h2>
    <div class="ml-auto">
        <a asp-action="Index" class="btn btn-primary rounded-pill">@Localizer["backToList"]</a>
    </div>
</div>

<table class="table">
    @foreach (var user in Model)
    {
        <tr>
            <td>@user.Email</td>
            <td>

                <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-userid="@user.Id">@Localizer["accessRigths"]</a>
                
            </td>
        </tr>
    }
</table>
